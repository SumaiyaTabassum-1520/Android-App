<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/calc_header"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:textColor="@color/white"
        android:gravity="right"
        android:textStyle="bold"
        android:textSize="50dp"
        tools:ignore="HardcodedText,RtlHardcoded,SpUsage" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/calc_result"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_gravity=""
            android:layout_margin="5dp"
            android:background="#E4151515"
            android:textColor="@color/white"
            android:textSize="50dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/delete_btn"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="#E4151515"
            android:text="DELETE"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:onClick="onButtonClicked"
            tools:ignore="ButtonStyle,HardcodedText,SpUsage,TextSizeCheck,VisualLintButtonSize" />
    </LinearLayout>


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="4"
        android:rowCount="4">

        <Button
            android:id="@+id/btn7"
            android:text="7"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="#6BAAA8A8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:onClick="onButtonClicked"
            tools:ignore="HardcodedText,SpUsage,VisualLintButtonSize" />
        <Button
            android:id="@+id/btn8"
            android:text="8"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="#6BAAA8A8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:onClick="onButtonClicked"
            tools:ignore="HardcodedText,SpUsage,VisualLintButtonSize" />
        <Button
            android:id="@+id/btn9"
            android:text="9"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="#6BAAA8A8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:onClick="onButtonClicked"
            tools:ignore="HardcodedText,SpUsage,VisualLintButtonSize" />
        <Button
            android:id="@+id/btn_div"
            android:text="\u00F7"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="#E4151515"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:onClick="onButtonClicked"
            tools:ignore="HardcodedText,SpUsage,VisualLintButtonSize" />
        <Button
            android:id="@+id/btn4"
            android:text="4"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="#6BAAA8A8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:onClick="onButtonClicked"
            tools:ignore="HardcodedText,SpUsage,VisualLintButtonSize" />
        <Button
            android:id="@+id/btn5"
            android:text="5"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="#6BAAA8A8"
